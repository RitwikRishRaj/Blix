{
  "name": "infinite-craft-game",
  "version": "1.0.0",
  "description": "An infinite craft game where players combine elements through drag-and-drop",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "build": "cd frontend && npm run build",
    "start": "cd frontend && npm start",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && pip install -r requirements.txt",
    "test": "cd frontend && npm test"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  },
  "keywords": ["game", "crafting", "react", "nextjs", "fastapi"],
  "author": "",
  "license": "MIT"
}